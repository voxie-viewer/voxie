name = 'ExtFilePeridynamics'

ply_args = []
if meson.get_compiler('c').get_argument_syntax() != 'msvc'
  # Needed for tinyply.h
  ply_args += [ '-Wno-missing-declarations', '-Wno-cast-qual' ]
endif

moc_files = qt5.preprocess(
  moc_sources : [
  ],
  moc_headers : [
  ],
  dependencies : [ ext_dependencies, ext_qt5_dep_gui_moc ],
)

main = executable(
  name,
  [
    moc_files,

    'ExtFilePeridynamics.cpp',
  ],
  implicit_include_directories : false,
  dependencies : [ ext_dependencies, ext_qt5_dep_gui ],
  install : true,
  install_rpath : ext_install_rpath,
  install_dir : ext_install_dir,
  cpp_args : [ ply_args ],
)

configure_file(
  input : name + '.json',
  output : name + '.json',
  copy : true,
)
install_data(name + '.json', install_dir : ext_install_dir)
